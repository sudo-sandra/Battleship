<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.root.battleship">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.root.battleship.LoginActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.root.battleship.RegisterActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".Game"
            android:screenOrientation="landscape" />
        <activity android:name=".SetUpMap"
            android:screenOrientation="landscape" />
        <activity android:name=".OfflineMenu"
            android:screenOrientation="landscape" />
        <activity android:name=".OfflineLogin"
            android:screenOrientation="landscape" />
        <activity android:name=".TurnDisplay"
            android:screenOrientation="landscape" />
        <activity android:name=".PlayerTwoGame"
            android:screenOrientation="landscape" />
        <activity android:name=".Result"
            android:screenOrientation="landscape" />
        <activity android:name=".Waiting"
            android:screenOrientation="landscape" />
    </application>


</manifest>